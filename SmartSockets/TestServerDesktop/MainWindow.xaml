<Window x:Class="TestServerDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestServerDesktop"
        mc:Ignorable="d"
        Title="TestServerDesktop" Height="500" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Background="#CCEECC">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Server:" Margin="10" VerticalAlignment="Center"/>
            <TextBox x:Name="SendText" Margin="8" Grid.Column="1" Text="" KeyDown="OnSendTextKeyDown"/>
        </Grid>

        <RichTextBox x:Name="TestOutput" ScrollViewer.VerticalScrollBarVisibility="Auto" Grid.Row="1" >
        </RichTextBox>

        <Border Background="#CCEECC" Grid.Row="2"  >
            <TextBlock x:Name="Status" Margin="10" />
        </Border>
    </Grid>
</Window>

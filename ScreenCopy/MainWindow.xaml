<Window x:Class="ScreenCopy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Screen Copy" Height="150" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Save images to:" Margin="0,0,10,0"/>
            <TextBox x:Name="Directory" Grid.Column="1" Background="LemonChiffon"/>
        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button HorizontalAlignment="Left" Margin="10" MinWidth="100" MinHeight="30" Click="OnSnap">Snap</Button>
            <TextBlock x:Name="ImageFile" Text="" VerticalAlignment="Bottom" Margin="10" Foreground="Blue" TextDecorations="Underline"
                       MouseDown="OnImageFileClick">
            </TextBlock>
        </StackPanel>
        
    </Grid>
</Window>

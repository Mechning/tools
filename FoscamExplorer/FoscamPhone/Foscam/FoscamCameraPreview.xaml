<UserControl x:Class="FoscamExplorer.Foscam.FoscamCameraPreview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid Width="320">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image x:Name="CameraImage" Width="320" Height="240" />
        <TextBlock Grid.Row="1" x:Name="DeviceName" Text="{Binding Name}" HorizontalAlignment="Center" Margin="10"/>

        <Border x:Name="ErrorBorder" Background="#E0000000" Visibility="Collapsed">
            <TextBlock Margin="10" TextWrapping="Wrap" x:Name="ErrorMessage" Text="" Foreground="Salmon"/>
        </Border>
    </Grid>
    
</UserControl>
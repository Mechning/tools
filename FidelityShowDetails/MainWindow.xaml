<Window x:Class="FidelityShowDetails.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FidelityShowDetails"
        mc:Ignorable="d"
        Title="Fidelity Statement Expander" Height="250" Width="350" Icon="HtmlScripting.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Padding="4" Click="OnExpandAll">Expand All</Button>
        <RichTextBox x:Name="RichTextOutput" Grid.Row="1"/>
    </Grid>
</Window>

<UserControl x:Class="OutlookSync.Controls.SyncProgressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:OutlookSync.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid x:Name="LayoutRoot" VerticalAlignment="Top" HorizontalAlignment="Center">
        <local:CylinderControl x:Name="FillCylinder" CylinderHeight="50" CylinderWidth="200" 
                               VerticalAlignment="Bottom" CylinderFill="#8080C0" CylinderStroke="Blue"/>

        <local:CylinderControl x:Name="OutlineCylinder" CylinderHeight="100" CylinderWidth="200" 
                                      CylinderStroke="Blue" />

        <TextBlock x:Name="ContactCount" Text="96" FontSize="48" Foreground="White" Margin="0,30,0,0"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>

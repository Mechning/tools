<UserControl x:Class="OutlookSync.Controls.SyncProgressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:OutlookSync.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">


    <Grid x:Name="LayoutRoot" Width="100" Height="100" >

        <Rectangle x:Name="BackgroundRect"                   
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBlock x:Name="CaptionTextBlock"  FontSize="36" 
                          HorizontalAlignment="Center" VerticalAlignment="Center"
                          />

        <TextBlock x:Name="SubTextBlock" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                   FontSize="14" Margin="3"/>
    </Grid>
</UserControl>

<Window x:Class="OutlookSync.UnhandledExceptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Unhandled Exception" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="An unhandled exception has occured.  Please email the following stack trace information to lovettchris@hotmail.com, thanks." TextWrapping="Wrap"
                   Margin="10"/>
        <TextBox x:Name="ErrorText" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" Grid.Row="1"
                 FontFamily="Courier New" Padding="10"
                 Text=""/>
    </Grid>
</Window>

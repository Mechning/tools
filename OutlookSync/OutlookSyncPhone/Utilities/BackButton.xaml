<UserControl x:Class="OutlookSyncPhone.Utilities.BackButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="80" d:DesignWidth="80">
    
    <Grid x:Name="LayoutRoot">
        <Grid Margin="5,2">
            <Ellipse x:Name="Fill" Width="56" Height="56" Fill="{StaticResource PhoneAccentBrush}"
                     StrokeThickness="4" Visibility="Collapsed"/>
            
            <Ellipse x:Name="Outline" Width="56" Height="56" Stroke="{StaticResource PhoneForegroundBrush}"
                     StrokeThickness="4" />
            

            <Image Source="/Assets/back.png" Width="64" Height="64"/>
        </Grid>
    </Grid>
</UserControl>
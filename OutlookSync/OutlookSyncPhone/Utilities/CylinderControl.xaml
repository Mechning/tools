<UserControl x:Class="OutlookSyncPhone.Utilities.CylinderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" 
    d:DesignHeight="480" d:DesignWidth="480" >

    <Grid x:Name="LayoutRoot">
        <Canvas>

            <Rectangle x:Name="CylinderBody" Width="200" Height="100" 
                       Canvas.Top="40" 
                       StrokeThickness="2">
                <Rectangle.Clip>
                    <RectangleGeometry Rect="0,2,200,96"/>
                </Rectangle.Clip>
            </Rectangle>   
            
            <Ellipse x:Name="CylinderBase" Width="200" Height="80" 
                     Canvas.Top="98" StrokeThickness="2">
                <Ellipse.Clip>
                    <RectangleGeometry Rect="0,40,200,40"/>
                </Ellipse.Clip>
            </Ellipse>
                
            <Ellipse x:Name="CylinderTop" Width="200" Height="80" 
                     StrokeThickness="2"/>
        </Canvas>
    </Grid>
</UserControl>
<UserControl x:Class="OutlookSyncPhone.Utilities.SyncProgressControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:OutlookSyncPhone.Utilities"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Width="100" Height="100" >

        <Rectangle x:Name="BackgroundRect"                   
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBlock x:Name="CaptionTextBlock"  FontSize="48" 
                          HorizontalAlignment="Center" VerticalAlignment="Center"
                          />

        <TextBlock x:Name="SubTextBlock" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                   FontSize="14" Margin="3"/>
    </Grid>
</UserControl>
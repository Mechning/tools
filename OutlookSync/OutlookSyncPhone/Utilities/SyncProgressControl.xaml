<UserControl x:Class="OutlookSyncPhone.Utilities.SyncProgressControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:OutlookSyncPhone.Utilities"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" VerticalAlignment="Top" HorizontalAlignment="Center">
        <local:CylinderControl x:Name="FillCylinder" CylinderHeight="0" CylinderWidth="200" 
                               VerticalAlignment="Bottom"
                               CylinderFill="#8080C0" CylinderStroke="Blue"/>

        <local:CylinderControl x:Name="OutlineCylinder" CylinderHeight="200" CylinderWidth="200" 
                                      CylinderStroke="Blue" />

        <TextBlock x:Name="ContactCount" Text="" FontSize="48" 
                          HorizontalAlignment="Center" VerticalAlignment="Center"
                          />
    </Grid>
</UserControl>
<Application
    x:Class="Microsoft.Journal.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:Microsoft.Journal.Common"
    xmlns:local="using:Journal">
    <Application.Resources>

        <!-- todo: figure out how to find these colors from the speed dial UI -->
        <SolidColorBrush x:Key="ListViewReorderItemBackgroundDarkTheme" Color="#333333"/>
        <SolidColorBrush x:Key="ListViewReorderItemBackgroundLightTheme" Color="#CCCCCC"/>

        <common:TimeSpanConverter x:Key="TimeSpanConverter"/>

        <common:BooleanFalseVisibleConverter x:Key="BooleanFalseVisibleConverter"/>
        <common:BooleanTrueVisibleConverter x:Key="BooleanTrueVisibleConverter"/>


        <Thickness x:Key="PivotPortraitThemePadding">0,5,0,0</Thickness>
        <Thickness x:Key="PivotLandscapeThemePadding">0,5,0,0</Thickness>
        <x:Int32 x:Key="PivotHeaderItemCharacterSpacing">0</x:Int32>
        <Thickness x:Key="PivotHeaderItemMargin">19,-6.5,5,3</Thickness>
        
        <Style x:Key="AccentHightlightStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PhoneAccentBrush}"/>
        </Style>
        
    </Application.Resources>
</Application>
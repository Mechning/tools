<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="FlyoutHeadingBackgroundBrush" Color="#007ACC"/>
    <SolidColorBrush x:Key="FlyoutHeadingForegroundBrush" Color="White"/>

    <Thickness x:Key="FlyoutContentThemePadding">0</Thickness>
    
    <!-- BarGraph styles -->
    <SolidColorBrush x:Key="BarGraphTooltipForeground" Color="Yellow"/>
    <SolidColorBrush x:Key="BarGraphTooltipBackground" Color="#80303030"/>
    <SolidColorBrush x:Key="BarGraphTargetStrokeBrush" Color="Yellow"/>
    <DoubleCollection x:Key="BarGraphTargetStrokeDashArray">3,3</DoubleCollection>
    <x:Double x:Key="BarGraphTargetStrokeThickness">1</x:Double>
    
</ResourceDictionary>
